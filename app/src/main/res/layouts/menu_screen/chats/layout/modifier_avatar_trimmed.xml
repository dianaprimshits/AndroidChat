<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/photoModifierTranslucentLayout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/settingsFrUserInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



        <android.support.constraint.ConstraintLayout
            android:id="@+id/openGalleryLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/openGalleryImButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_image_grey600_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/openGalleryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                app:layout_constraintLeft_toRightOf="@+id/openGalleryImButton"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/openGalleryImButton"
                app:layout_constraintTop_toTopOf="@+id/openGalleryImButton"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                />
        </android.support.constraint.ConstraintLayout>



        <android.support.constraint.ConstraintLayout
            android:id="@+id/deleteAvatarLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/openGalleryLL"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/deleteAvatarImButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_icon_red"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/deleteAvatarTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                app:layout_constraintLeft_toRightOf="@+id/deleteAvatarImButton"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/deleteAvatarImButton"
                app:layout_constraintTop_toTopOf="@+id/deleteAvatarImButton"
                android:textColor="@color/pink"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>