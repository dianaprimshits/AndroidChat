<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settingsFrUserInfo">


    <android.support.v7.widget.Toolbar
        android:id="@+id/renameContactActToolbar"
        style="@style/SettingsToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/renameContactActButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_icon"
            android:background="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renameContact"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="45dp" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/renameContactActFirstNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FirstName"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@+id/renameContactActToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/renameContactActFirstNameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/FirstName"
        android:textColorHint="@color/lightGrey"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renameContactActFirstNameTV"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/renameContactActLastNameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/LastName"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renameContactActFirstNameET"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />


    <ImageButton
        android:id="@+id/renameContactActButtonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_checkbox_circle"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        android:background="@null"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />


</android.support.constraint.ConstraintLayout>