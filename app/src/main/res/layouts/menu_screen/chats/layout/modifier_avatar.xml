<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/photoModifierTranslucentLayout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/settingsFrUserInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/openPhotoLLFULL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/openPhotoImButtonFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_eye_grey600_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/openPhotoTVFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open"
                app:layout_constraintLeft_toRightOf="@+id/openPhotoImButtonFULL"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/openPhotoImButtonFULL"
                app:layout_constraintTop_toTopOf="@+id/openPhotoImButtonFULL"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/openCameraLLFULL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/openPhotoLLFULL"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/openCameraImButtonFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/ic_camera_grey600_24dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/openCameraTVFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="@string/camera"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/openCameraImButtonFULL"
                app:layout_constraintLeft_toRightOf="@+id/openCameraImButtonFULL"
                app:layout_constraintTop_toTopOf="@+id/openCameraImButtonFULL"
                android:textSize="18sp"/>
        </android.support.constraint.ConstraintLayout>






        <android.support.constraint.ConstraintLayout
            android:id="@+id/openGalleryLLFULL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/openCameraLLFULL"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/openGalleryImButtonFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_image_grey600_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/openGalleryTVFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                app:layout_constraintLeft_toRightOf="@+id/openGalleryImButtonFULL"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/openGalleryImButtonFULL"
                app:layout_constraintTop_toTopOf="@+id/openGalleryImButtonFULL"
                android:textColor="@color/white"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                />
        </android.support.constraint.ConstraintLayout>






        <android.support.constraint.ConstraintLayout
            android:id="@+id/deleteAvatarLLFULL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/openGalleryLLFULL"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/deleteAvatarImButtonFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_icon_red"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/deleteAvatarTVFULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                app:layout_constraintLeft_toRightOf="@+id/deleteAvatarImButtonFULL"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/deleteAvatarImButtonFULL"
                app:layout_constraintTop_toTopOf="@+id/deleteAvatarImButtonFULL"
                android:textColor="@color/pink"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>