<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingsFrFreeSpace"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/contacts_search_act_toolbar"
        style="@style/SettingsToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:title="@string/contacts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/contactsActBtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_left_white_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/contactsFrDelimiter1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/contacts_search_act_toolbar"
            app:layout_constraintTop_toTopOf="@+id/contacts_search_act_toolbar"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/contactsFrDelimiter1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:background="@color/settingsFrDelimiter"
        app:layout_constraintTop_toBottomOf="@+id/contacts_search_act_toolbar"
        tools:layout_editor_absoluteX="0dp" />


        <FrameLayout
            android:id="@+id/contactSearchContactsNumberLT"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactsFrDelimiter1"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
