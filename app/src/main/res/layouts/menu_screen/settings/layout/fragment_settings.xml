<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <android.support.constraint.ConstraintLayout
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_height="150dp"
        android:layout_width="366dp"
        android:orientation="horizontal"
        android:id="@+id/photoLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundSettings"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="9dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/default_avatar"
            app:border_width="4dp"
            app:border_color="#000000"
            android:elevation="5dp"
            android:id="@+id/circleImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/buttonAddPhoto"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circleImageView"
            android:layout_toEndOf="@+id/circleImageView"
            android:elevation="5dp"
            android:text="@string/buttonAddPhoto"
            android:textAlignment="center"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="203dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="203dp" />

        <Button
            android:id="@+id/buttonDeletePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/circleImageView"
            android:layout_alignStart="@+id/buttonAddPhoto"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:text="@string/buttonDeletePhoto"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="203dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="203dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/backgroundSettings"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoLayout"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="16dp"
            android:layout_width="248dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="82dp"
            app:layout_constraintRight_toLeftOf="@+id/buttonEditUsername"
            android:layout_marginRight="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:background="@color/lightGrey">

            <TextView
                android:id="@+id/settingsTvUsername"
                android:layout_width="222dp"
                android:layout_height="29dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="username"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="4dp" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="248dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"

            android:background="@color/lightGrey"
            android:id="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/settingsTvPhoneNumber"
                android:layout_width="222dp"
                android:layout_height="29dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="phone number"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>

        <Button
            android:layout_marginRight="8dp"
            android:id="@+id/buttonEditUsername"
            android:layout_width="60dp"
            android:layout_height="50dp"
            
            android:text="@string/editUserNameButton"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.562"
            app:layout_constraintBottom_toTopOf="@+id/buttonEditPhoneNumber" />

        <Button
            android:layout_marginRight="8dp"
            android:id="@+id/buttonEditPhoneNumber"
            android:layout_width="60dp"
            android:layout_height="50dp"

            android:text="@string/editUserNameButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toRightOf="@+id/constraintLayout2"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/button4"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:text="@string/signOutInSettings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>